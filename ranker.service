[Unit]
Description=Spyder Website Ranker
After=network.target

StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
Restart=always
RestartSec=5s
RuntimeMaxSec=1d

User=charles
WorkingDirectory=/opt/spyder/tools
ExecStart=/usr/bin/python3 /opt/spyder/tools/rank-websites.py

[Install]
WantedBy=multi-user.target
